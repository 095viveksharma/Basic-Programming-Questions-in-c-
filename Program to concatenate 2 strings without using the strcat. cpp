#include<bits/stdc++.h>
#include<conio.h>
using namespace std;

int main()
{
    char a[100] = "vivek", b[100] = "sharma";
    char c[100], i=0, j=0;
    cout<<"First string: "<<a<<endl;
    cout<<"Second string: "<<b<<endl;

    while(a[i]!= '\0')
    {
        c[j] = a[i];
        j++;
        i++;
    }
    i = 0;

    while(b[i]!= '\0')
    {
        c[j] = b[i];
        j++;
        i++;
    }
    c[j] = '\0';

    cout<<"After concatenation: "<<c;
    getch();
    return 0;
}
